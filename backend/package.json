{
  "name": "travel-guide-backend",
  "version": "1.0.0",
  "description": "旅行攻略微信小程序后端服务",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:websocket": "vitest run src/tests/websocket.test.ts",
    "test:watch": "vitest watch src/tests/websocket.test.ts",
    "test:server": "node scripts/start-websocket-test.js",
    "deploy": "serverless deploy"
  },
  "keywords": ["travel", "guide", "miniprogram", "backend"],
  "author": "Travel Guide Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.0",
    "socket.io": "^4.6.0",
    "winston": "^3.8.0",
    "joi": "^17.7.0",
    "axios": "^1.2.0",
    "serverless": "^3.24.0",
    "serverless-offline": "^12.0.0",
    "serverless-dotenv-plugin": "^6.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.3.1",
    "@types/jest": "^29.2.3",
    "ts-jest": "^29.0.3",
    "vitest": "^0.28.0",
    "@vitest/ui": "^0.28.0"
  }
